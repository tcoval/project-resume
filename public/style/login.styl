.ng-modal-overlay
  position fixed
  z-index 9999
  top 0
  left 0
  width 100%
  height 100%
  background-color rgba(43, 43, 43, 0.9)

.ng-modal-dialog
  position fixed
  z-index 10000
  width 40%
  top 50%
  left 50%
  transform translate(-50%, -50%)
  -webkit-transform translate(-50%, -50%)
  background-color #fff
  box-shadow 2px 2px 40px #222

.ng-modal-dialog-content
  padding 60px
  text-align center

label
  display block
  margin-bottom 10px
  font-size 14px

input[type="text"]
  padding 5px
  margin-bottom 10px

input[type="submit"]
  border none
  padding 10px 20px
  font-size 14px
  background-color #a7a7a7
  color #fff
  cursor pointer

@media screen and (min-width:700px) {
  input[type="text"] {
    min-width 200px
  }
}
