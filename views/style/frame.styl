@font-face
  font-family 'Moderne Sans'
  src url('../font/MODERNE SANS.ttf')

body
  background #34495E
  margin 0px
  padding 0px
  font-family 'Open Sans', sans-serif
  font-size 13px

div.top-bar
  width 100%
  height 40px
  background-color #253545

div.page-title
  display inline-block
  font-family 'Moderne Sans', 'Open Sans', 'Helvetica', sans-serif
  font-size 25px
  color #ECF0F1
  padding-top 3px
  line-height 40px
  margin-left 15px

div.right-toolbar
  float right

.login-btn
  color #ECF0F1
  font-family 'Roboto', 'Open Sans', 'Helvetica', sans-serif
  font-size 18px
  font-weight 300
  line-height 40px
  height 40px
  margin-right 15px
  padding 10px

.login-btn:hover
  background-color #1abc9c
  cursor pointer
  text-decoration none

div.paper
  width 850px
  height 1100px
  background #fff
  color #111
  margin 20px auto

div.margins
  padding 40px 100px

div.prev-layout, div.next-layout
  width 60px
  height 60px
  font-size 40px
  color #000
  background-color #232E34

div.prev-layout > span.glyphicon
  margin 10px
