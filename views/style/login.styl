label
  display block
  margin-bottom 10px
  font-size 14px

input[type="text"], input[type="password"]
  padding 5px
  margin-bottom 10px

input[type="submit"]
  border none
  padding 0 20px
  background-color #a7a7a7
  color #fff
  cursor pointer
  font-family 'Roboto', 'Open Sans', 'Helvetica', sans-serif
  font-size 18px
  font-weight 300
  line-height 40px
  height 40px
  margin-right 15px

input[type="submit"]:disabled
  background #ddd

.logout-btn
  background-color transparent !important

input[type="submit"]:hover
  background-color #1abc9c !important
  color #23527c

#suUsername.ng-dirty, #suPassword.ng-dirty
  outline-color green

#suUsername.unavailable.ng-dirty, #suPassword.ng-invalid
  outline-color red

@media screen and (min-width:700px) {
  input[type="text"], input[type="password"] {
    min-width 200px
  }
}
