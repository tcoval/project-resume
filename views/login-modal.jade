#loginModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='loginModalLabel')
  .modal-dialog(role='document')
    .modal-content
      form(name='form', ng-submit='vm.logIn()', role='form')
        .modal-header
          button.close(type='button', data-dismiss='modal', aria-label='Close')
            span(aria-hidden='true') Ã—
          h4#myModalLabel.modal-title Login
        .modal-body
          div
            label(for='username') Username
            input(type='text', name='username', ng-model='vm.username', required)
          br
          div
            label(for='password') Password
            input(type='password', name='password', ng-model='vm.password', required)
          p(ng-hide='vm.loginError === ""') {{vm.loginError}}
        .modal-footer
          div
            input(type='submit', value='Login')
