doctype html
html(lang='en' ng-app='app')
  head
    meta(charset='utf-8')
    title Project Resume
    link(rel='icon' type='image/png' href='img/favicon.png')
    link(rel='stylesheet' type='text/css' href='https://fonts.googleapis.com/css?family=Roboto:400,100,300|Open+Sans:400,300,700')
    link(rel='stylesheet' type='text/css' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css')
    link(rel='stylesheet' type='text/css' href='vendor/jquery-ui-custom.min.css')
    link(rel='stylesheet' type='text/css' href='vendor/jquery-ui.structure.min.css')
    link(rel='stylesheet' type='text/css' href='style/frame.css')
    link(rel='stylesheet' type='text/css' href='style/login.css')
    
  body
    data#authToken(value='#{authToken}')
    div.ng-cloak(ng-controller='appCtrl as vm' ng-init='vm.init()')
      div.top-bar
        div.page-title PROJECT RESUME
        div.right-toolbar
          div.ng-cloak(ng-controller='authCtrl as auth')
            a.login-btn(ng-show='vm.authToken === "default"' type='button' data-toggle='modal' data-target='#suModal') Signup
            a.login-btn(ng-show='vm.authToken === "default"' type='button' data-toggle='modal' data-target='#liModal') Login
            form(ng-show='vm.authToken !== "default"' name='form' ng-submit='auth.logout()' role='form')
              input.logout-btn(type='submit' value='Logout')
            include ./signup-modal.jade
            include ./login-modal.jade
      div.ng-cloak.paper
        div.ng-cloak.margins

    // vendor
    script(src='https://cdn.socket.io/socket.io-1.3.5.js')
    script(src='https://code.jquery.com/jquery-1.11.3.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.7/angular.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/angular-ui-sortable/0.13.4/sortable.min.js')
    script(src='vendor/bootstrap-custom.min.js')
    script(src='vendor/jquery-ui-custom.min.js')
    
    // app
    script(src='js/app.js')
