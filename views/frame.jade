doctype html
html(lang='en' ng-app='app')
  head
    meta(charset='utf-8')
    title Project Resume
    link(rel='icon' type='image/png' href='img/favicon.png')
    script(src='https://cdn.socket.io/socket.io-1.3.5.js')
    script(src='https://code.jquery.com/jquery-1.11.3.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.6/angular.js')
    script(src='js/bootstrap.min.js')
    script(src='js/jquery-ui.min.js')
    link(rel='stylesheet' type='text/css' href='style/jquery-ui.min.css')
    link(rel='stylesheet' type='text/css' href='style/jquery-ui.structure.min.css')
    link(rel='stylesheet' type='text/css' href='style/bootstrap.min.css')
    link(rel='stylesheet' type='text/css' href='style/frame.css')
    link(rel='stylesheet' type='text/css' href='style/login.css')
    
  body
    data#authToken(value='#{authToken}')
    div.ng-cloak(ng-controller='appCtrl as vm' ng-init='vm.renderLayout()')
      div
        a.login-btn(ng-show='vm.authToken === "#{authToken}"', type='button', data-toggle='modal', data-target='#signupModal') Signup
        a.login-btn(ng-show='vm.authToken === "#{authToken}"', type='button', data-toggle='modal', data-target='#loginModal') Login
        form(ng-show='vm.authToken !== "#{authToken}"', name='form', ng-submit='vm.logOut()', role='form')
          input(class='login-btn' type='submit' value='Logout')
        include ./signup-modal.jade
        include ./login-modal.jade

      div.ng-cloak(class='paper')
        div.ng-cloak(class='margins')

    script(src="js/app.module.js")
    script(src="js/app.controller.js")
    script(src="js/auth.service.js")
    script(src="js/user.service.js")
    script(src="js/layout.service.js")
